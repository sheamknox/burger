<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Burger Shack</h1>
    </div>
  </div>

<div class="row">
    <div class="col-sm-4">
      <h2>Uneaten Burgers</h2>

        <ul>
          {{#each burgers}}
          {{#unless this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="eaten" value="1">
            <button type="submit">Devour Burger</button>
            </form>

       
          </li>
          {{/unless}}
          {{/each}}
        </ul>
    </div>

  <div class="col-sm-4">
    <h2>Add Burger</h2>
      <form class="create-update-form" action="/" method="POST">

        <div class="form-group">
          <label for="burger">Burger Type:</label>
          <input type="text" id="burger" name="name">
        </div>

        <button type="submit">Add</button>
      </form>
  </div>


  <div class="col-sm-4">
    <h2>Devoured Burgers</h2>

    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.burger_name}}
          </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
